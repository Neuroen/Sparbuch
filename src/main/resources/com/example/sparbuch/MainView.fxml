<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="524.0" prefWidth="743.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sparbuch.MainController">
    <HBox>
        <BorderPane>
            <padding>
                <Insets left="5" right="5" />
            </padding>
            <center>
                <ListView fx:id="accountsList" onMouseClicked="#OnSelectedIndexChangedAccountsList" />
            </center>
            <bottom>
                <HBox>
                    <Button alignment="CENTER" contentDisplay="CENTER" onAction="#OpenAccountEditor" text="+" />
                    <Button alignment="CENTER" contentDisplay="CENTER" onAction="#EditAccount" text="Bearbeiten" />
                    <Button alignment="CENTER" contentDisplay="CENTER" onAction="#DeleteAccount" text="Löschen" />
                </HBox>
            </bottom>
        </BorderPane>
        <BorderPane>
            <padding>
                <Insets left="5" right="5" />
            </padding>
            <center>
                <ListView fx:id="transactionsList" />
            </center>
            <bottom>
                <HBox>
                    <Button alignment="CENTER" contentDisplay="CENTER" onAction="#OpenTransactionEditor" text="+" />
                    <Button alignment="CENTER" contentDisplay="CENTER" onAction="#EditTransaction" text="Bearbeiten" />
                    <Button alignment="CENTER" contentDisplay="CENTER" onAction="#DeleteTransaction" text="Löschen" />
                </HBox>
            </bottom>
        </BorderPane>
        <BorderPane fx:id="controlsPanel">
            <top>
                <Label fx:id="accountBalance" text="300,0€" />
            </top>
            <center>
                <VBox prefHeight="375.0" prefWidth="169.0">
                    <Label text="Sparziel" />
                    <ProgressBar fx:id="saveTargetIndicator" progress="0.0" />
                    <Label fx:id="targetProgressLabel" text="0€ von 2000€ erreicht" />
                </VBox>
            </center>
            <bottom>
            </bottom>
        </BorderPane>
    </HBox>
</VBox>
