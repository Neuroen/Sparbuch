<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ProgressBar?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.sparbuch.MainController">
    <HBox>
        <BorderPane>
            <padding>
                <Insets left="5" right="5"/>
            </padding>
            <center>
                <ListView fx:id="accountsList"/>
            </center>
            <bottom>
                <Label>Accounts: </Label>
            </bottom>
        </BorderPane>
        <BorderPane>
            <padding>
                <Insets left="5" right="5"/>
            </padding>
            <center>
                <ListView fx:id="transactionsList"/>
            </center>
            <bottom>
                <Label>Transaktionen: </Label>
            </bottom>
        </BorderPane>
        <BorderPane fx:id="controlsPanel">
            <top>
                <Label fx:id="accountBalance" text="300,0€"/>
            </top>
            <center>
                <VBox>
                    <Label text="Sparziel"/>
                    <ProgressBar fx:id="saveTargetIndicator" progress="0.0"/>
                    <Label fx:id="targetProgressLabel" text="0€ von 2000€ erreicht"/>
                </VBox>
            </center>
            <bottom>
                <Button onAction="#OpenTransactionEditor">Geld Buchen</Button>
            </bottom>
        </BorderPane>
    </HBox>
</VBox>
