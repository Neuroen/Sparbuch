<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.sparbuch.TransactionEditorController"
            prefHeight="400.0" prefWidth="600.0">

    <TextField fx:id="transactionNameField"/>
    <TextField fx:id="transactionValueField"/>
    <DatePicker fx:id="transactionDatePicker"/>
    <Button fx:id="acceptTransactionButton" onAction="#AcceptButtonClicked" text="Buchen"/>
    <Button fx:id="cancelTransactionButton" onAction="#CancelButtonClicked" text="Abbrechen"/>
</VBox>
